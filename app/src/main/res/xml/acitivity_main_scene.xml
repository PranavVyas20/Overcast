<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_temp_value">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#FFFFFF"/>
        </Constraint>

        <Constraint
            android:id="@+id/tv_feels_like">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#FFFFFF"/>
        </Constraint>

        <Constraint
            android:id="@+id/tv_temp_description">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#FFFFFF"/>
        </Constraint>
        <Constraint android:id="@+id/iv">
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="#00FFFFFF" />
        </Constraint>

        <Constraint android:id="@+id/composeWrapperView">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#00FFFFFF"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/composeWrapperView"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="#E2D3FA"/>
        </Constraint>

        <Constraint android:id="@+id/iv_temp_icon"
            android:layout_height="59dp"
            android:layout_width="59dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_feels_like"
            app:layout_constraintEnd_toEndOf="@+id/ivSearch">
        </Constraint>
        <Constraint
            android:id="@+id/buttonsLayout"
            android:layout_marginBottom="10dp">
        </Constraint>

        <Constraint
            android:id="@id/iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_temp_value"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="#E2D3FA" />
        </Constraint>

        <Constraint
            android:id="@id/tv_day_night_temp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintEnd_toEndOf="@id/iv" />

        <Constraint
            android:id="@id/tv_date_time"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/iv"
            app:layout_constraintStart_toStartOf="@id/iv" />
        <Constraint
            android:id="@+id/tv_temp_value"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tvLocationName"
            app:layout_constraintTop_toBottomOf="@id/tvLocationName">

            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#000000"/>

        </Constraint>

        <Constraint
            android:id="@+id/tv_feels_like">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#000000"/>
        </Constraint>

        <Constraint
            android:id="@+id/tv_temp_description"
            android:visibility="gone">
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/nestedScrollView"
            app:touchAnchorSide="top" />
    </Transition>
</MotionScene>
